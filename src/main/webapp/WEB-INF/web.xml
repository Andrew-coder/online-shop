<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>online-shop</display-name>
    <!--<welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>-->
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>online.shop.controller.filters.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>authFiler</filter-name>
        <filter-class>online.shop.controller.filters.AdminAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFiler</filter-name>
        <url-pattern>/online-shop/admin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>online.shop.controller.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/online-shop/*</url-pattern>
    </servlet-mapping>
</web-app>